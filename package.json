{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "linter": "yarn run eslint",
    "test": "nyc mocha ./tests/*.test.js --exit --inspect=0.0.0.0:9229 --timeout 120000",
    "start": "yarn test && yarn docs && node index.js",
    "docs": "./node_modules/.bin/esdoc -c .esdoc.json"
  },
  "pre-push": [
    "linter",
    "test"
  ],
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint-config-airbnb": "^18.2.1",
    "express": "^4.16.4",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2",
    "typescript": "^4.1.3"
  }
}
